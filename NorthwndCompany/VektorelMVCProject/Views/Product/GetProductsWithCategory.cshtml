@model List<Product>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @Html.Raw(ViewBag.EditProduct)
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ürün No</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Kategorisi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Stoğu</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.UnitsInStock</td>
                            <td><a href="/Product/EditProduct/@item.ProductID" class="btn btn-primary">Güncelle</a></td>
                            <td><a href="/Product/RemoveProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>